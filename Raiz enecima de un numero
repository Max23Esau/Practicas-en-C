//Calcular la raiz enecima de un numero
#include <stdio.h>
#include <math.h>
int main() {
  int num, potencia;
  float raiz;
  printf("\tCalcular la raiz enecima de un numero");
  
  printf("\n\nIngrese el numero que desea calcular: ");
 scanf("%i", &num);
  
  printf("\nIngrese el numero de la potencia de la raiz: ");
 scanf("%i", &potencia);
  raiz = pow(num, (double)1/potencia);
  
  if(num < 0)
  {
    printf("\n%i tiene raiz imaginaria", num);
  }
 
  if(raiz >= 0)
  {
      switch(potencia)
    {
      case 1:
      printf("\nLa raiz primera de %i es %i",num,(int)raiz);    
      break;      
      case 2:
      printf("\nLa raiz cuadrada de %i es %.2f",num,raiz);    
      break;
      case 3:
      printf("\nLa raiz cubica de %i es %.2f",num,raiz);    
      break;
      case 4:
      printf("\nLa raiz cuarta de %i es %.2f",num,raiz);    
      break;
      case 5:
      printf("\nLa raiz quinta de %i es %.2f",num,raiz);    
      break;
      case 6:
      printf("\nLa raiz sexta de %i es %.2f",num,raiz);   
      break;
      case 7:
      printf("\nLa raiz septima de %i es %.2f",num,raiz);   
      break;
      case 8:
      printf("\nLa raiz octava de %i es %.2f",num,raiz);    
      break;
      case 9:
      printf("\nLa raiz novena de %i es %.2f",num,raiz);    
      break;
      case 10:
      printf("\nLa raiz decima de %i es %.2f",num,raiz);    
      break;
      default: printf("\nRaiz no valida");
    }   
  }
 return 0;
}
